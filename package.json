{
  "name": "usync",
  "version": "0.0.1",
  "description": "A simple sync, archive and file management tool",
  "dependencies": {
    "@types/jest": "^29.2.5",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "chokidar": "^3.5.3",
    "commander": "^9.4.1",
    "jest": "^29.3.1",
    "md5": "^2.3.0",
    "mongodb": "^4.12.1",
    "rxjs": "^7.8.0",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/node": "^18.11.15",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/__tests__/**"
    ],
    "delay": 1000
  },
  "scripts": {
    "build": "tsc",
    "build:tsc-watch": "tsc -w",
    "build:client": "nodemon build/client/main.js",
    "build:server": "nodemon build/server/main.js",
    "server": "nodemon build/server/main.js",
    "client": "nodemon build/client/main.js -p /tmp/sync",
    "client2": "nodemon build/client/main.js -p /tmp/sync2",
    "start": "npm-run-all -p build:tsc-watch build:client",
    "test": "vitest"
  }
}
